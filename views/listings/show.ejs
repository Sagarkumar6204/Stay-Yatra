<% layout("/layouts/boilerplate") -%>

  <body>
    <div class="row mt-3">
      <div class="col-11 offset-1">

        <h3 class="offset-1">
          <%= listing.title %>
        </h3>
        <div class="card col-10 offset-1 show-card lisitng-card">
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="lisitng-image">
          <div class="card-body">
            <b>
              <hr><br>
              <%= listing.description %>
                <br>
                &#8377;<%= Number(listing.price).toLocaleString("en-IN") %>
                  <br>
                  <%= listing.location %>
                    <br>
                    <%= listing.country %>
                      </p>
                      <div class="container">
                        <div class="row justify-content-center">
                          <div class="col-12 col-md-3 mb-3">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark w-100 edit-btn">Edit</a>
                          </div>
                          <div class="col-12 col-md-3 mb-3">
                            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                              <button class="btn btn-dark w-100">Delete</button>
                            </form>
                          </div>
                          <!-- review section -->
                           <hr>
                           <div class="col-8 offset-1 mb-3">
                            <h4>Leave a Review</h4>
                            <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
                              <div class="mb-3 mt-2">
                                <label class="form-label" for="rating">Rating</label>
                                <input type="range" class="form-range" min="0" max="5"
                                step="1" value="3" name="review[rating]" id="rating">
                              </div>
                              <div class="mb-3 mt-2">
                                <label class="form-label" for="comment">Comments</label>
                                <textarea cols="30" rows="5" required  class="form-control" name="review[comment]" id="comment"></textarea>
                                <div class="invalid-feedback">
                                  Please add some reviews
                                </div>
                              </div>
                              <button class="btn btn-outline-dark">Submit</button>
                            </form>
                            <hr>
                           <p><b>All Reviews</b></p>
<div class="row">



<% for (let review of listing.reviews) { %>
  <div class="card mb-3 col-10 col-md-5 ms-3">
    <div class="card-body">
      <h5 class="card-title ">Review</h5>
      <p class="card-text"><%= review.comment %></p>
      <p class="card-text">Rating: <%= review.rating %>‚≠ê</p>
    </div>
    <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST" class="mb-3"><button class="btn btn-sm btn-dark ">Delete</button></form>
  </div>
<% } %>
</div>








                          </div>
                        </div>
                      </div>


          </div>
        </div>



        <br>


        </form>

      </div>
    </div>
  </body>