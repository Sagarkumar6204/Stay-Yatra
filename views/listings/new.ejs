<% layout('layouts/boilerplate') -%>
<body class="bg-light">

  <div class="row mt-3">
    <div class="col-8 offset-2 ">
      <br><br>
    <h3 class="mb-4">Create a New Listing</h3>
    <form method="POST" action="/listings" class="p-4 bg-white rounded shadow-sm">
      
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" name="listing[title]" placeholder="Enter Title">
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" rows="3"></textarea>
      </div>

      <div class="mb-3">
        <label for="imageUrl" class="form-label">Image URL</label>
        <input type="text" class="form-control" name="listing[image][url]" placeholder="Enter Image URL">
      </div>

      <div class="mb-3">
        <label for="imageFilename" class="form-label">Image Filename</label>
        <input type="text" class="form-control" name="listing[image][filename]" placeholder="Enter Filename">
      </div>
<div class="row">
 <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input type="number" class="form-control" name="listing[price]" placeholder="Enter Price">
      </div>

      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input type="text" class="form-control" name="listing[country]" placeholder="Enter Country">
      </div>
</div>
     

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" name="listing[location]" placeholder="Enter Location">
      </div>

      <button class="btn btn-dark add-btn mt-3" type="submit">Submit</button>

    </form>
    </div>
  </div>
  <br><br>


</body>

