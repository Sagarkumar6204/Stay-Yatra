<% if (success && success.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show">
    <%= success %>
    <button type="button" 
    class="btn-close"
     data-bs-dismiss="alert"
      arial-label="close">
    </button>
  </div>
<% } %>


<% if (error && error.length > 0) { %>
  <div class="alert alert-danger alert-dismissible fade show">
    <%= error %>
    <button type="button" 
    class="btn-close"
     data-bs-dismiss="alert"
      arial-label="close">
    </button>
  </div>
<% } %>


